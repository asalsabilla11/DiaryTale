<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_jamTidur_alarmLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="22:00"
            android:textColor="@color/colorNavyDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_strip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_jamTidur_alarmLayout"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="-"/>

        <TextView
            android:id="@+id/tv_jamBangun_alarmLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_strip"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="7:00"
            android:textColor="@color/colorNavyDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_durasiJam_alarmLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_h"
            android:layout_centerVertical="true"
            android:text="10"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorNavyDark"/>
        <TextView
            android:id="@+id/tv_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_durasiMenit_alarmLayout"
            android:layout_centerVertical="true"
            android:text="h"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorNavyDark"/>
        <TextView
            android:id="@+id/tv_durasiMenit_alarmLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_m"
            android:layout_centerVertical="true"
            android:text="10"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorNavyDark"/>
        <TextView
            android:id="@+id/tv_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="m"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorNavyDark"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#993A4664"/>
</LinearLayout>